# Use an official PyTorch image with CUDA support as the base
FROM pytorch/pytorch:2.0.1-cuda11.7-cudnn8-runtime

# Metadata
LABEL maintainer="Aditya Mishra"
LABEL version="1.0.0"

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# --- CRITICAL FIX: Pre-download YOLO weights for offline support ---
RUN pip install ultralytics && python -c "from ultralytics import YOLO; YOLO('yolo11n-seg.pt')"
# -----------------------------------------------------------------

# Copy application code
COPY . .

# Create output directories
RUN mkdir -p /app/logs /app/models /app/images /app/masks

CMD ["python", "train.py"]